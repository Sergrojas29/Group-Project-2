<main>
    <section id="catCardProfile">
        <a href="/{{cat.id}}" id="cardContent">
            <h1 id="cat_name"> {{cat.name}} </h1>
            <img class="catProfile" src="./Cats/{{cat.name}}.jpg" alt="CatPicture">
            <h2 id="breed">{{cat.breed}}</h2>
            <div id="Catinfo">
                <div class="cirlceinfo" id="age">I am {{cat.age}} year(s) old </div>
                <div class="cirlceinfo" id="size">I'm a {{cat.size}}</div>
                <div class="cirlceinfo" id="affection">My affection level: {{cat.affection}}</div>
                {{#if cat.availability}}
                <div class="cirlceinfo" id="availability" style="background-color: #238636;"> I am available Today</div>

                {{!-- <a id="favCat" href="/"></a> --}}
                {{else}}
                <div class="cirlceinfo" id="availability" style="background-color: #fe4a49;">Not Here Today ;(</div>
                {{/if}}
            </div>
        </a>
    </section>
</main>